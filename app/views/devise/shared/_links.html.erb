
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "log-link" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-btn" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <br><p class="question"><strong>Don't have an account?</strong><%= link_to "Sign up", new_registration_path(resource_name), class: "log-link" %></p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "log-link" %><br/>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "log-link" %><br />
  <% end %>


<div><p class="or-option"><strong>OR</strong></p></div>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login",
      url: omniauth_authorize_path(resource_name, provider),
      method: :post,
      data: {turbo: "false"} do |f| %>
        <%= f.submit "Login", class: "google-btn", type: "image", src: url_for("/assets/btn_google_signin_dark_normal_web.png") %>
    <% end %>
  <% end %>
<% end %>
