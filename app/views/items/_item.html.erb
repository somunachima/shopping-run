<%# <li><%= link_to item.name, items_path(item)  %>
 <div class="item-details">
  <div class="item-name">
    <% bookmark = current_user.bookmarks.find_by(item: item) %>
    <% if current_user.bookmarks.find_by(item: item).nil? %>
      <form action="/bookmarks" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="bookmark[item_id]" value="<%= item.id %>">
        <input type="submit" value="Save">
      </form>
    <% else %>
      <form action="<%= bookmark_path(bookmark) %>" method="delete">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Unsave">
      </form>
    <% end %>
    <%= item.name %>
  </div>

  <div class="delete-btn" style="color: #000000">
    <%= link_to "", item_path(item),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this item?"},
    class:"fa-solid fa-trash"%>
  </div>
 </div>
