<%= form_with(model: @item) do |f| %>
    <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> Unable to save this item:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name, required: true %>
  </div>

  <div>
    <%= f.label :content, style: "display: block" %>
    <%= f.text_area :content %>
  </div>
  <%# <%= f.label :completed %>
  <%# <%= f.check_box :completed %>
  <div>
    <%= f.submit "Add Item" %>
  </div>
<% end %>
